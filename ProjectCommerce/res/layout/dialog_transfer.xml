<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button 
        android:id="@+id/btnExportTemplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:drawableLeft="@drawable/test_export"        
        android:text="Save to Template"/>
    <Button 
        android:id="@+id/btnExportEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:drawableLeft="@drawable/test_export"        
        android:text="Send to Email"/>
    <Button 
        android:id="@+id/btnExportBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:drawableLeft="@drawable/test_export"        
        android:text="Send to Bluetooth"/>
    <Button 
        android:id="@+id/btnExportSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:drawableLeft="@drawable/test_export"        
        android:text="Send to SMS"/>

</LinearLayout>