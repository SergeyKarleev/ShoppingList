<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnExportTemplate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/test_export"
        android:text="Сохранить в шаблоны" />

    <Button
        android:id="@+id/btnExportEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/test_export"
        android:text="Отправить по Email" />

    <Button
        android:id="@+id/btnExportBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/test_export"
        android:text="Отправить по Bluetooth" />

    <Button
        android:id="@+id/btnExportSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/test_export"
        android:text="Отправить в SMS" />

</LinearLayout>