<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6FA"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSort"
            android:layout_width="@dimen/btn_backend_size"
            android:layout_height="@dimen/btn_backend_size"
            android:background="@drawable/btn_sort" />

        <TextView
            android:id="@+id/tvSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnInMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:text="Назад в магазин" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="@dimen/btn_backend_size"
            android:layout_height="@dimen/btn_backend_size"
            android:background="@drawable/btn_add"/>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/elProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true">
    </ExpandableListView>

</LinearLayout>