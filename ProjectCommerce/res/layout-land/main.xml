<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.projectcommerce.activities.MainActivity" >

    <FrameLayout
        android:id="@string/fragment_universal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnStoreFront"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_land_height"
            android:layout_weight="1"
            android:textSize="@dimen/button_land_font_size"
            android:text="@string/btnStoreFront" />

        <Button
            android:id="@+id/btnBackEnd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_land_height"
            android:layout_weight="1"
            android:textSize="@dimen/button_land_font_size"
            android:text="@string/btnBackEnd" />
    </LinearLayout>

</LinearLayout>