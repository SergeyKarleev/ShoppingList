<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sergeykarleev.shoppinglist"
    android:versionCode="1"
    android:versionName="1.3" >
    
    <!-- Версия 1.3 списки в StoreFront-->   
    
    	<!-- Версия 1.3 Взаимодействие: продумать передачу списка другому пользователю с пустой/другой базой товаров -->
    	
    	<!-- Версия 1.3 База данных сожержит: таблицы Категория, БазаТоваров, ЛичныйСписок(?) -->
    	<!-- Версия 1.3 База данных: таблица Категория состоит из ID_category,Name_category -->
    	<!-- Версия 1.3 База данных: таблица БазаТоваров состоит из ID_product,Name_product, ID_category -->
    	<!-- Версия 1.3 База данных: таблица ЛичныйСписок состоит из ID_record,Name_product,Name_category,Comment -->
    	    	
    	<!-- Версия 1.3 Backend отображает только название, комментарий и чекбокс-->
    	<!-- Версия 1.3 Backend содержит всю базу товаров -->
    	<!-- Версия 1.3 Backend предоставляет возможность добавить свой товар и категорию в базу-->
    	<!-- Версия 1.3 Backend предоставляет возможность поставить комментарий, но не копирует его в базу-->
    	<!-- Версия 1.3 Backend имеет кнопки: выделить всё/снять выделение, очистить комментарии-->
    	<!-- Версия 1.3 Backend имеет меню: загрузить из файла-->
    	<!-- Версия 1.3 Backend имеет меню: сохранить в файл/отправить по почте/отправить по BlueTooth -->
    	
    	<!-- Версия 1.3 StoreFront Получает отмеченные товары в виде массива -->
    	<!-- Версия 1.3 StoreFront Отображает на каждом листе список товаров одной категории -->
    	<!-- Версия 1.3 StoreFront Предполагает получение товаров из файла (даже если отсутствуют в локальной базе) -->
    	<!-- Версия 1.3 StoreFront По нажатию на товар, он перечеркивается. В таблицу ЛС записывается метка -->
    	<!-- Версия 1.3 StoreFront Может отобразить полный список товаров и их состояние куплен/не куплен-->
    

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />
    
 	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.sergeykarleev.shoppinglist.activities.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
