<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.sergeykarleev.shoppinglist"
    android:versionCode="1"
    android:versionName="1.3" >
    
    <!-- Версия 1.3 списки в StoreFront-->   
       	
       	<!-- Версия 1.3 MainActivity содержит контейнер с фрагментами и контейнер с рекламным баннером (реализуем в конце) -->
        
    	<!-- Версия 1.3 База данных сожержит таблицы: Категория, БазаТоваров -->
    	<!-- Версия 1.3 База данных: таблица Категория состоит из ID_category(key), Name_category -->
    	<!-- Версия 1.3 База данных: таблица БазаТоваров состоит из ID_product(key), Name_product, ID_category -->
    	    	
    	<!-- Версия 1.3 StoreFront Главный фрагмент, загружается первым -->
    	<!-- Версия 1.3 StoreFront Состоит из панели кнопок сверху и ListView со списком выбранных товаров-->
    	<!-- Версия 1.3 StoreFront Панель кнопок: загрузить из шаблона, передать список, план магазина, добавить товар -->
    	<!-- Версия 1.3 StoreFront Отображает на одном экране список товаров по категориям -->
    	
    	<!-- Версия 1.3 StoreFront Получает отмеченные в Backend товары в виде массива -->    	
    	<!-- Версия 1.3 Storefront Предоставляет возможность поставить комментарий к каждому товару-->
    	<!-- Версия 1.3 StoreFront Предполагает получение товаров из файла (даже если отсутствуют в локальной базе) -->
    	<!-- Версия 1.3 StoreFront Реализует сохранение (в текстовый файл или своё расширение) на карту памяти и передачу данных (СМС, почта, BlueTooth)  -->
    	<!-- Версия 1.3 StoreFront По нажатию на товар, он перечеркивается -->
    	<!-- Версия 1.3 StoreFront Может отобразить полный список товаров и их состояние куплен/не куплен-->
    	    	
    	<!-- Версия 1.3 Backend отображает только название, комментарий и чекбокс-->
    	<!-- Версия 1.3 Backend содержит всю базу товаров -->
    	<!-- Версия 1.3 Backend предоставляет возможность добавить свой товар в базу-->
    	<!-- Версия 1.3 Backend предоставляет возможность добавить свою категорию в базу-->
    	<!-- Версия 1.3 Backend имеет кнопки: выделить всё/снять выделение, очистить комментарии-->
    	<!-- Версия 1.3 Backend имеет меню: загрузить из файла-->
    	<!-- Версия 1.3 Backend имеет меню: сохранить в файл/отправить по почте/отправить по BlueTooth -->
    	
    	
    

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />
    
 	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.sergeykarleev.shoppinglist.activities.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
                   >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
